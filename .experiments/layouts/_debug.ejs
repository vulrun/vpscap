<style>
  #editor {
    position: relative !important;
    width: 100%;
    height: 100%;
    margin: 0;
    border: 0;
    border-radius: 0;
    font-size: 1rem;
    line-height: 1.5;
    white-space: pre-wrap;
    color: #fff;
    filter: saturate(0.7);
    background-color: transparent;
  }

  #editor .ace_gutter {
    color: rgba(255, 255, 255, 0.8);
    background-color: rgba(0, 0, 0, 0.2);
  }

  #editor .ace_active-line {
    color: rgba(255, 255, 255, 0.9);
    background-color: rgba(0, 0, 0, 0.1);
  }
</style>

<div class="container mx-auto">
  <div class="clearfix"></div>
  <h1 class="mt-4 mb-3"></h1>
  <div class="bg-dark rounded shadow-sm p-3">
    <pre id="editor"><%- JSON.parse(JSON.stringify(JSON.stringify(locals))) %></pre>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.7/ace.js" type="text/javascript"></script>
<script defer>
  try {
    const editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.setReadOnly(true);
    editor.setShowPrintMargin(false);
    editor.setOption("minLines", 35);
    editor.setOption("maxLines", Infinity);
    editor.setOption("printMargin", false);
    editor.setOption("wrap", true);
    editor.session.setMode("ace/mode/json");
    editor.session.setOptions({
      tabSize: 2, // Set the number of spaces for each indentation level
      // useSoftTabs: true, // Use spaces instead of tabs for indentation
    });
  } catch (e) {
    console.warn(e);
  }
</script>
